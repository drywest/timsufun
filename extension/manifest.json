{
  "manifest_version": 3,
  "name": "MergedChat Sender",
  "version": "1.0",
  "description": "Receives send commands from merged chat page and posts messages into open Twitch & YouTube chat pages.",
  "permissions": ["scripting", "tabs", "activeTab"],
  "host_permissions": ["https://*.youtube.com/*","https://*.twitch.tv/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*.youtube.com/*","https://*.twitch.tv/*","https://*.youtube-nocookie.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["http://localhost/*","http://127.0.0.1/*","*://*/*"], 
      "js": ["page-listener.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "MergedChat Sender"
  }
}
